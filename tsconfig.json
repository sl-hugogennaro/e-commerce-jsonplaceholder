{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceRoot": "src",
    "declaration": true,
    "outDir": "./lib",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2017",
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "static",
    "__mcks__",
    "__tests__"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  },
  "include": [
    "./src"
  ]
}
